# Backend
NODE_ENV=production
# PORT is provided by Render automatically

# Database and JWT
MONGODB_URI=YOUR_ATLAS_CONNECTION_STRING
JWT_SECRET=GENERATE_A_STRONG_SECRET

# CORS (set this to the final frontend URL on Render, comma-separated if multiple)
CORS_ORIGIN=https://your-frontend.onrender.com

# Logging and security
LOG_LEVEL=info
LOG_REQUESTS=false
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Temporary auth bypass (leave false in production)
AUTH_DISABLED=false

# Frontend (Vite)
# In production on Render Static Site, set VITE_API_URL to your backend service URL
VITE_API_URL=http://localhost:3001

# Optional dev port for local development (Vite proxy builds API base from this if VITE_API_URL is not set)
VITE_API_PORT=3001

# Temporary auth bypass (leave false in production)
VITE_AUTH_DISABLED=false