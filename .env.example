# Backend
NODE_ENV=production
# PORT is provided by Render automatically, you usually do NOT set it
MONGODB_URI=YOUR_ATLAS_CONNECTION_STRING
JWT_SECRET=GENERATE_A_STRONG_SECRET
CORS_ORIGIN=http://localhost:5173,https://your-frontend.onrender.com
LOG_LEVEL=info
LOG_REQUESTS=false
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_DISABLED=false

# Frontend (Vite)
# In production on Render, set this in the Static Site service env
VITE_API_URL=http://localhost:3001