# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:3001
APP_NAME=PharmGenius
APP_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pharmgenius
COSMOS_DB_ENDPOINT=your_cosmos_db_endpoint
COSMOS_DB_KEY=your_cosmos_db_key
COSMOS_DB_NAME=pharmgenius
COSMOS_DB_CONTAINER=drugs

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@pharmgenius.com
SENDGRID_FROM_NAME=PharmGenius
EMAIL_TEMPLATES_PATH=./email-templates

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRICE_MONTHLY=price_monthly_subscription_id
STRIPE_PRICE_ANNUAL=price_annual_subscription_id

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=pharmgenius-assets
AWS_S3_ENDPOINT=https://s3.amazonaws.com
AWS_S3_CDN_URL=https://your-cdn-domain.com

# External APIs
NHS_API_KEY=your_nhs_api_key
OPENFDA_API_KEY=your_openfda_api_key
SNOMED_API_KEY=your_snomed_api_key
DRUGS_API_KEY=your_drugs_api_key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
METRICS_ENABLED=true

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=true
ENABLE_SEARCH=true
ENABLE_COURSES=true
ENABLE_CONSULTATIONS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CSRF_PROTECTION=true

# Development & Testing
DEBUG=false
LOG_REQUESTS=true
SEED_DATA=true
DEMO_DATA_PATH=./demo-data

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
SEARCH_INDEX_PREFIX=pharmgenius
SEARCH_BATCH_SIZE=100

# Notification Configuration
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_PUBLIC_KEY=your_push_public_key
PUSH_PRIVATE_KEY=your_push_private_key

# Content Management
CMS_API_KEY=your_cms_api_key
CONTENT_CDN_URL=https://your-content-cdn.com
MEDIA_UPLOAD_MAX_SIZE=10485760

# Performance
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379
SESSION_STORE=redis
